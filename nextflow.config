params {
    no_file = "$projectDir/assets/NO_FILE"
    base_folder = "/mnt/d/TESTING_SPACE/AJ_Test"
    in_genus = "Psilocybe"
    out_genus = "Agrocybe" // concat_seq.nf ONLY
    out_label = "Psi-Genes"
    data_type = "aa"
    ram_gb = 40
    cpu_threads = 16
    output_dir = "/mnt/d/TESTING_SPACE/AJ_Test/EGEP_exonerate_clinker"
    organism_kingdom = "Funga"
    compleasm_list = "basidiomycota,agaricales" // concat_seq.nf ONLY
    overlap_threshold = 0.3 // concat_seq.nf ONLY
    primary_genes = "P0DPA9,P0DPA8,P0DPB2,P0DPA6" // exonerate_clinker.nf ONLY
    secondary_genes = "P0DPB1,P0DPA7,QGJ16928,A0A409Y6Z6" // exonerate_clinker.nf ONLY
    genes_fasta = "/mnt/d/TESTING_SPACE/psilocybe_psi-cluster_aa.fasta" // exonerate_clinker.nf ONLY
    exonerate_pid = 0.2 // exonerate_clinker.nf ONLY
    clinker_pid = 0.3 // exonerate_clinker.nf ONLY
    max_intron = 1000 // exonerate_clinker.nf ONLY
    max_trimmed_length = 10000 // exonerate_clinker.nf ONLY
}

process {
    cpus = params.cpu_threads
    memory = "${params.ram_gb} GB"
    executor = 'local'
    container = '/bin/entheome.sif'
}

singularity {
    enabled = true
    autoMounts = true
    runOptions = '--bind /mnt/d:/mnt/d'  // CHANGE THIS IF YOU HAVE DIFFERENT DRIVE NAME CONTAINING DATA
}

profiles {
    local {
        process.executor = 'local'
    }
    slurm {
        process.executor = 'slurm'
        process.queue = 'normal'
    }
    singularity {
        process.executor = 'local'
    }
}
